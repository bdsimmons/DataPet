<script src="/javascripts/controllers/connection-new.js"></script>

<div class="container">

  <div class="row" ng-controller="NewConnectionCtrl">
    <br />
    <p ng-show='message!==""' style='padding: 10px 10px 10px 10px'  class='{{messageClass}}'>
      {{message}}
    </p>
    <br />
    <ui-codemirror ui-codemirror-opts="editorOptions" ng-model="jsonDataString"></ui-codemirror>

    <button class="btn btn-default btn-danger" ng-click="testConnection()">Test</button>
    <button class="btn btn-default btn-primary" ng-click="sendData()">Submit</button>

  </div>
</div>